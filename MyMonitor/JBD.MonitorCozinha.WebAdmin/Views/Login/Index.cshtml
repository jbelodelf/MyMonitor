@model JBD.MonitorCozinha.WebAdmin.Models.UsuarioViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monitor Cozinha</title>

    @*<environment include="Development">*@
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/css/login.css" rel="stylesheet" />
    @*</environment>*@
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <div id="mensagemModal" name="mensagemModal" style="display: none; background-color: #ff2d296b; text-align:center; height: 40px; padding-top: 5px; font-size: 20px;"><b>mensagem</b></div>
            <div class="fadeIn first topUser">
                <i class='fas fa-user-tie' style='font-size:50px'></i> </br>
                <span style="font-size: 22px;">LOGAR NO MONITOR DE COZINHA</span>
            </div>
            <form>
                <input type="text" id="userName" class="fadeIn second" name="userName" placeholder="Usuário">
                <input type="password" id="password" class="fadeIn third" name="password" placeholder="Senha">
                <input type="button" class="fadeIn fourth" value="Entrar" onclick="Usuario.Login();">
            </form>
            <div id="formFooter">
                <a class="underlineHover" href="#">Esqueceu sua senha?</a>
            </div>
        </div>
    </div>

    <!-- Início Modal para mensagem do navegador -->
    <div class="modal fade" id="ModalNavegador" tabindex="-1" role="dialog" aria-labelledby="fatorFModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog border-dark">
            <div class="modal-content" style="width: 200%; margin-left: -50%; margin-top: 50%;">
                <div class="modal-header">
                    <div class="col-md-11">
                        <h3 class="modal-title">NAVEGADOR NÃO RECOMENDADO</h3>
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                </div>
                <!-- Modal body -->
                <fieldset>
                    <div class="form-horizontal">
                        <div class="form-group row col-md-12" style="text-align: center">
                            <div class="form-group col-md-12">
                                <p>&nbsp;</p>
                                <p>Este navegador poderá causar instabilidade no sistema.</p>
                                <p>Recomendamos fortemente o uso do Google Chrome.</p>
                                <p><a href="https://www.google.pt/intl/pt-PT/chrome/?brand=CHBD&gclid=CjwKCAjw3c_tBRA4EiwAICs8CvVZZ-rTIeDp7-a0rWXMrYL7lL4GjA5Hc6c7QathzxPpAz4-oU0ijRoCTloQAvD_BwE&gclsrc=aw.ds" type="button">Baixar o chrome</a>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <!-- Fim da Modal para mensagem do navegador-->

    @*<environment include="Development">*@
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" asp-append-version="true"></script>
    <script src="~/lib/fontawesome/fontawesome-free-5.9.0-web/js/all.js" asp-append-version="true"></script>
    <script src="~/js/Views/Usuario/Usuario.js" asp-append-version="true"></script>
    @*</environment>*@
</body>
</html>